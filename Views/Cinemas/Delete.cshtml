@model TopMovie_SemesterarbeitSSE.Models.Cinema

@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Delete"];
}

@if (User.IsInRole("Admin"))
{
    <h1>@SharedLocalizer["Delete"]</h1>

<h3>@SharedLocalizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@SharedLocalizer["Cinema"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @SharedLocalizer["Name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["City"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Logo"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@SharedLocalizer["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index">@SharedLocalizer["Back to List"]</a>
    </form>
</div>
}
else
{
    await Html.RenderPartialAsync("_AccessDenied", "Access denied");
}
