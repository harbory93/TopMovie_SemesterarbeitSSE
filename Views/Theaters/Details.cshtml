@model TopMovie_SemesterarbeitSSE.Models.Theater

@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Details"];
}

@if (User.IsInRole("Admin"))
{
<h1>@SharedLocalizer["Details"]</h1>

<div>
    <h4>@SharedLocalizer["Theater"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @SharedLocalizer["Name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Capacity"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Cinema"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cinema.Name)
        </dd>
    </dl>
</div>
<div>
    @await Html.PartialAsync("_EditOverviewButtonsPartial", Model)
</div>
}
else
{
    await Html.RenderPartialAsync("_AccessDenied", "Access denied");
}
