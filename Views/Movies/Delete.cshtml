@model TopMovie_SemesterarbeitSSE.Models.Movie

@using Microsoft.Extensions.Localization    

@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer["Delete"];
}

@if (User.IsInRole("Admin"))
{
<h1>@SharedLocalizer["Delete"]</h1>

<h3>@SharedLocalizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@SharedLocalizer["Movie"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @SharedLocalizer["ImagePath"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Title"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Description"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Genre"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Director"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Cast"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cast)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Duration"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@SharedLocalizer["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index">@SharedLocalizer["Back to List"]</a>
    </form>
</div>
}
else
{
    await Html.RenderPartialAsync("_AccessDenied", "Access denied");
}
