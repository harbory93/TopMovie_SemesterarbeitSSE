@model TopMovie_SemesterarbeitSSE.Models.Movie

@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer["Details"];
}

@if (User.IsInRole("Admin"))
{
<h1>@SharedLocalizer["Details"]</h1>

<div>
    <h4>@SharedLocalizer["Movie"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @SharedLocalizer["ImagePath"]
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImagePath" style="max-width: 100px; max-height: 100px;" />
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Title"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Description"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Genre"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Director"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Cast"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cast)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Duration"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration) min.
        </dd>        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@SharedLocalizer["Edit"]</a> |
    <a asp-action="Index">@SharedLocalizer["Back to List"]</a>
</div>
}
else
{
    await Html.RenderPartialAsync("_AccessDenied", "Access denied");
}
