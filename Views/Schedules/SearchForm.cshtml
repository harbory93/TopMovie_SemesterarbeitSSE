@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResources> SharedLocalizer

<h4>@SharedLocalizer["Search"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearch">
            <div class="form-group">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class ="form-control"></input>
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["Search"] class="btn btn-primary" style="margin-top: 5px;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@SharedLocalizer["Back to List"]</a>
</div>
