@model TopMovie_SemesterarbeitSSE.Models.Schedule

@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer["Delete"];
}

@if (User.IsInRole("Admin"))
{
<h1>@SharedLocalizer["Delete"]</h1>

<h3>@SharedLocalizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@SharedLocalizer["Schedule"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @SharedLocalizer["Time"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Date"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Movie"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Theater"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Theater.Name)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger" />
        | <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["Back to List"]</a>
    </form>

</div>
}
else
{
    await Html.RenderPartialAsync("_AccessDenied", "Access denied");
}
