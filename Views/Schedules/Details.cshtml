@model TopMovie_SemesterarbeitSSE.Models.Schedule
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@SharedLocalizer["Schedules"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @SharedLocalizer["ImagePath"]
        </dt>
        <dd class="col-sm-10">
            <img class="rounded" src="@Url.Content(Model.Movie.ImagePath)" style="max-width: 250px; max-height: 250px;" />
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Time"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Date"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Movie"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Description"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Description)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Duration"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Duration) min.
        </dd>
        <dt class = "col-sm-2">
            @SharedLocalizer["Theater"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Theater.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">@SharedLocalizer["Edit"]</a> <br />
    }
    <a asp-action="Index">@SharedLocalizer["Back to List"]</a>
</div>

