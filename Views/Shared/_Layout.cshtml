@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IStringLocalizer<SharedResources> SharedLocalizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TopMovie_SemesterarbeitSSE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TopMovie_SemesterarbeitSSE.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-danger border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Schedules" asp-action="Index">TopMovie AG</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Movies" asp-action="Index">@SharedLocalizer["Movies"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Cinemas" asp-action="Index">@SharedLocalizer["Cinemas"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Theaters" asp-action="Index">@SharedLocalizer["Theaters"]</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Schedules" asp-action="Index">@SharedLocalizer["Schedules"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Schedules" asp-action="SearchForm">@SharedLocalizer["Search"]</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @if (Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "en")
                                {
                                    <span>EN</span>
                                }
                                else if (Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "de")
                                {
                                    <span>DE</span>
                                }
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/?ui-culture=de-DE">DE</a></li>
                                <li><a class="dropdown-item" href="/?ui-culture=en-US">EN</a></li>
                            </ul>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-danger">
        <div class="container" style="color: white">
            &copy; 2024 - TopMovie AG
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Function to update language switcher links
        function updateLanguageLinks() {
            var currentUrl = window.location.href;
            var baseUrl = currentUrl.split('?')[0]; // Split URL at the query string and take the first part
            var newUrlDe = `${baseUrl}?ui-culture=de-DE`;
            var newUrlEn = `${baseUrl}?ui-culture=en-US`;

            // If there's already a query string, append ui-culture parameter instead of overwriting
            if (currentUrl.includes('?')) {
                newUrlDe = `${baseUrl}&ui-culture=de-DE`;
                newUrlEn = `${baseUrl}&ui-culture=en-US`;
            }

            // Update href attributes for DE and EN links
            document.querySelector('a.dropdown-item[href*="ui-culture=de-DE"]').setAttribute('href', newUrlDe);
            document.querySelector('a.dropdown-item[href*="ui-culture=en-US"]').setAttribute('href', newUrlEn);
        }

        // Update links immediately on load
        updateLanguageLinks();
    });
</script>
